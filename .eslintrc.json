{
  "env": {
    "node": true,
    "commonjs": true,
    "es2021": true,
    "jest": true
  },
  "extends": ["eslint:recommended", "prettier"],
  "parserOptions": {
    "ecmaVersion": 2021
  },
  "rules": {
    "no-console": "warn",
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "eqeqeq": ["error", "always"],
    "no-var": "error",
    "prefer-const": "warn",
    "consistent-return": "error",
    "no-undef": "error",
    "curly": ["error", "all"],
    "no-empty-function": "warn"
  },
  "overrides": [
    {
      "files": ["tests/**/*.js", "**/*.test.js"],
      "rules": {
        "no-console": "off"
      }
    }
  ]
}
